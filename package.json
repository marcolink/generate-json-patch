{
  "name": "generate-json-patch",
  "version": "1.2.7",
  "author": "Marco Link <marcoxlink@gmail.com>",
  "private": false,
  "repository": "marcolink/generate-json-patch",
  "homepage": "https://github.com/marcolink/generate-json-patch",
  "packageManager": "pnpm@8.6.12",
  "license": "MIT",
  "description": "A simple function to diff any two objects and generate a JSON Patch",
  "main": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    "node": "./dist/index.js",
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "default": "./dist/index.js"
  },
  "keywords": [
    "json",
    "diff",
    "patch",
    "compare",
    "generate",
    "create"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "node --import tsx --test src/**/*.spec.ts",
    "test-watch": "node --import tsx --test --watch src/**/*.spec.ts",
    "test-coverage": "node --import tsx --experimental-test-coverage --test src/**/*.spec.ts",
    "lint": "eslint --ext .ts ./src",
    "lint-fix": "pnpm run lint --fix",
    "presemantic-release": "pnpm run build",
    "semantic-release": "semantic-release"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "clean": true,
    "dts": true
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-json-patch": "^3.1.1",
    "globals": "^16.5.0",
    "semantic-release": "^25.0.2",
    "tsup": "^8.5.1",
    "tsx": "^4.16.2",
    "typescript": "^5.9.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
